<!-- payment here -->
<section class="payment__section pt__60 pb-120">
    <div class="container">
        <form name="creditCardInfo" id="creditCardInfo" class="col-md-12">
            <div class=" row col-md-12 justify-content-center">
                <div class="col-md-12 col-lg-12 col-xl-12">
                    <div class="checkout__single-wrapper">
                        <div class="checkout__single checkout__single__bg">
                            
                            <div class="transactionid d-flex align-items-center">
                                <span class="tran fz-18 fw-500">
                                    სულ გადასახდელი: {{ticketPriceSum}}.00₾
                                </span>
                            </div>

                            <div class="checkout__single-form">
                                <div class="row g-3" >
                                    <p class="mb__10 creditValidationText payment">*ყველა ველი აუცილებლად უნდა შეივსოს!!!</p>

                                    <div class="col-lg-12">
                                        <div class="input-single">
                                            <label for="userCardNumber">ბარათის ნომერი*</label>
                                            <input type="number" name="number" id="userCardNumber" placeholder="2456 1665 5155 5151" required ng-model="creditCardInfo.number">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="input-single">
                                            <label for="userCardDate">მოქმედების ვადა*</label>
                                            <input type="text" id="userCardDate" name="date" placeholder="DD/MM/YY" required ng-model="creditCardInfo.expDate">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="input-single">
                                            <label for="userCardName">CVC / CVV</label>
                                            <input type="text" name="cvvNumber" id="userCardName" placeholder="3 digits" required ng-model="creditCardInfo.cvvNumber">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="input-single">
                                            <label for="userCardNamecard">ბარათის მფლობელი</label>
                                            <input type="text" name="namecard" id="userCardNamecard" placeholder="J. smith" required ng-model="creditCardInfo.nameOnCard">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center mt-4">
                                <button ng-click="changeActiveTab(webPages.PaymentResult); confirmTicketStatus(registeredTicketId)" class="cmn__btn" ng-disabled="registerTicketForm.$invalid">
                                    <span>
                                       გადახდა
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- payment end -->